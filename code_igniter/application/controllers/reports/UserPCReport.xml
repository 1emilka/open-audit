<report>
	<details>
		<report_name>User PC Report</report_name>
		<report_display_in_menu>y</report_display_in_menu>
		<report_sql><![CDATA[SELECT system.id, system.hostname, system.owner, system.ip_address, floor(system.pc_memory / 1024) as pc_memory, system.model, system.pc_date_os_installation, windows.client_site_name, windows.user_name FROM system LEFT JOIN oa_group_sys ON (system.id = oa_group_sys.id) LEFT JOIN windows ON (system.id = windows.id AND windows.current = 'y') WHERE oa_group_sys.group_id = @group]]></report_sql>
		<report_view_file>v_report</report_view_file>
		<report_view_contents></report_view_contents>
