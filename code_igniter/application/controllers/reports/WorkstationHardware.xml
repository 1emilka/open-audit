	<details>
		<report_name>Workstation Hardware</report_name>
		<report_display_in_menu>y</report_display_in_menu>
		<report_sql><![CDATA[SELECT system.id, system.name, system.icon, system.os_family, system.ip, system.manufacturer, system.model, system.serial, floor(system.pc_memory / 1024) AS pc_memory, system.form_factor, processor.description FROM system LEFT JOIN oa_group_sys ON (system.id = oa_group_sys.system_id) LEFT JOIN processor ON (processor.id = system.id AND processor.current = 'y') LEFT JOIN oa_location ON (system.location_id
 = oa_location.id) WHERE oa_group_sys.group_id = @group AND type = 'computer' AND class != 'server']]></report_sql>
