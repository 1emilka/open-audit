<report>
	<details>
		<report_name>SQL Server Databases</report_name>
		<report_display_in_menu>y</report_display_in_menu>
		<report_sql><![CDATA[SELECT DISTINCT(system.system_id), system.hostname, system.man_os_family, system.man_environment, server.version, server_item.instance, server_item.name, server_item.path, server_item.size, date(server_item.first_seen) as first_seen FROM system LEFT JOIN oa_group_sys ON (system.system_id = oa_group_sys.system_id) LEFT JOIN server ON (system.system_id = server.system_id AND server.current = 'y') LEFT JOIN server_item ON (system.system_id = server_item.system_id AND server_item.current = 'y' AND server_item.parent_id = server.id) WHERE oa_group_sys.group_id = @group AND server_item.first_seen IS NOT NULL]]></report_sql>
		<report_view_file>v_report</report_view_file>
