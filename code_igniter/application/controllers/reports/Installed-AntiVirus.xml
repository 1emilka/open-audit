<?xml version="1.0" encoding="ISO-8859-1"?>
<report>
	<details>
		<report_name>Installed - AntiVirus</report_name>
		<report_display_in_menu>y</report_display_in_menu>
		<report_sql><![CDATA[SELECT system.id, system.name, system.os_name, software.name AS software_name, software.version, software.id AS software_id FROM software LEFT JOIN system ON (system.id = software.system_id AND software.current = 'y' AND (software.name LIKE '%virus%' or software.name LIKE '%trend micro%' or software.name LIKE '%endpoint%')) LEFT JOIN oa_group_sys ON (oa_group_sys.system_id = system.id) WHERE oa_group_sys.group_id = @group]]></report_sql>
		<report_view_file>v_report</report_view_file>
		<report_view_contents></report_view_contents>
		<report_processing></report_processing>
		<report_sort_column>0</report_sort_column>
		<report_description>Name, os name, software name, software version where software_name like virus or trend micro or endpoint and is a Windows computer.</report_description>
	</details>
	<columns>
		<column>
			<column_order>0</column_order>
			<column_name>Device Name</column_name>
			<column_variable>name</column_variable>
			<column_type>link</column_type>
			<column_link>/devices/</column_link>
			<column_secondary>id</column_secondary>
			<column_ternary></column_ternary>
			<column_align>left</column_align>
		</column>
		<column>
			<column_order>1</column_order>
			<column_name>OS Name</column_name>
			<column_variable>os_name</column_variable>
			<column_type>text</column_type>
			<column_link></column_link>
			<column_secondary></column_secondary>
			<column_ternary></column_ternary>
			<column_align>left</column_align>
		</column>
		<column>
			<column_order>2</column_order>
			<column_name>Software Name</column_name>
			<column_variable>software_name</column_variable>
			<column_type>link</column_type>
			<column_link>/report/specific_software/$group_id/</column_link>
			<column_secondary>software_id</column_secondary>
			<column_ternary></column_ternary>
			<column_align>left</column_align>
		</column>
		<column>
			<column_order>3</column_order>
			<column_name>Version</column_name>
			<column_variable>version</column_variable>
			<column_type>text</column_type>
			<column_link></column_link>
			<column_secondary></column_secondary>
			<column_ternary></column_ternary>
			<column_align>left</column_align>
		</column>
	</columns>
</report>