		<group_padded_name></group_padded_name>
		<group_dynamic_select><![CDATA[SELECT DISTINCT(system.id) FROM system LEFT JOIN server ON (system.id = server.id AND server.current = 'y') WHERE server.type = 'web' AND system.status = 'production']]></group_dynamic_select>
		<group_parent>1</group_parent>
		<group_category>application</group_category>
		<group_display_sql><![CDATA[SELECT system.icon, system.os_family, system.name, system.id, system.ip, system.description, system.os_name, server.name, server.version FROM system LEFT JOIN server ON (system.id = server.id AND server.current = 'y' AND server.type = 'web') LEFT JOIN oa_group_sys ON (system.id = oa_group_sys.system_id) WHERE oa_group_sys.group_id = ?]]></group_display_sql>
		<group_icon>web</group_icon>
		<group_description>Any items that have their status attribute set to 'production' and have their os_name attribute containing 'server' and have rows in the server table that is of type 'web'.</group_description>
