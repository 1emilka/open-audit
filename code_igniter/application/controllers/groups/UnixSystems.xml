		<group_padded_name></group_padded_name>
		<group_dynamic_select><![CDATA[SELECT distinct(system.id) FROM system WHERE system.os_group LIKE LOWER('unix') AND system.status = 'production']]></group_dynamic_select>
		<group_parent>1</group_parent>
		<group_description>Any items that have their status attribute set to 'production' and have their os_group attribute set to 'unix'.</group_description>
		<group_category>os</group_category>
